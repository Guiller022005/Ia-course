<script>
  document.getElementById('inscriptionButton')?.addEventListener('click', () => {
    document.getElementById('registrationForm')?.scrollIntoView({
      behavior: 'smooth',
      block: 'start'
    });
  });
  document.getElementById('registrationForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target as HTMLFormElement);
    // Mapear los campos del formulario a la estructura de la base de datos
    const data = {
      firstName: formData.get('nombre'),
      lastName: formData.get('apellido'),
      email: formData.get('email'),
      phone: formData.get('telefono'),
      company: formData.get('empresa'),
      position: formData.get('cargo')
    };
    
    try {
      const response = await fetch('https://chatcampuslands.com:8443/landingpageapp/register', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
      });
      
      if (response.ok) {
        const result = await response.json();
        alert('¡Registro exitoso! Pronto nos pondremos en contacto contigo.');
        (e.target as HTMLFormElement).reset();
      } else {
        const error = await response.json();
        throw new Error(error.message || 'Error en el registro');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Hubo un error al procesar tu registro. Por favor intenta nuevamente.');
    }
  });
</script>
